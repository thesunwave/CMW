<%= render partial: "components/errors" %>
<div class="b-page b-page_profile">
	<div class="b-page__cover b-page__cover_profile">
		<div class="b-profile__info">
			<div class="b-profile__image-service g-clearfix">
				<div class="g-left b-profile__image">
					<div class="b-profile__image__img">
						<img src="/images/avatar149x149.png" alt="" />
					</div>
					<div class="b-profile__image__subscribe b-profile__image__subscribe_go b-button" data-text-go="Подписаться" data-text-gone="Отписаться">
						Подписаться
					</div>
				</div>
				<div class="g-left b-profile__service">
					<div class="b-profile__service__title">
						<%= @user.name %>
					</div>
					<div class="b-profile__service__spec">
						<%= @user.spec %>
					</div>
					<div class="b-profile__service__activity">
						<div class="b-profile__service__activity__item">
							<div class="b-profile__service__activity__item__top">
								<%= @user.works.count %>
							</div>
							<div class="b-profile__service__activity__item__bottom">
								<%#= t ('works.count', count: 0) %>
								работ
							</div>
						</div>
						<div class="b-profile__service__activity__item">
							<div class="b-profile__service__activity__item__top">
								102
							</div>
							<div class="b-profile__service__activity__item__bottom">
								комм.
							</div>
						</div>
					</div>
					<div class="b-social b-social_line">
						<a href="<%= @user.vk %>" class="b-social__item b-social__item_message" title="Отправить сообщение">Отправить сообщение</a>
						<a href="#" class="b-social__item b-social__item_vk" title="ВКонтакте">ВКонтакте</a>
						<a href="#" class="b-social__item b-social__item_fb" title="Facebook">Facebook</a>
						<a href="#" class="b-social__item b-social__item_tw" title="Twitter">Twitter</a>
						<a href="#" class="b-social__item b-social__item_be" title="Behance">Behance</a>
						<a href="#" class="b-social__item b-social__item_db" title="Dribbble">Dribbble</a>
					</div>
				</div>
			</div>
			<div class="b-profile__description">
				<%= if @user.description.present?
							@user.description
						else
							t('profile.blank')
						end %>
			</div>
		</div>
		<div class="b-news-wrapper b-news_grid">
<% if @user.works.present? %>
<% @user.works.each do |work| %>
			<div class="b-new g-clearfix">
				<div class="g-left b-new__image">
					<%= link_to image_tag(work.image(:thumb)), show_work_path(work) %>
				</div>
				<div class="g-left b-new__content">
					<h2 class="b-new__title"><%= link_to work.title, show_work_path(work) %></h2>
					<div class="b-new__author">
						<%= link_to @user.name, profile_show_path(@user.username), class: "b-new__author__link" %>
					</div>
					<div class="g-clearfix b-new__description-wrapper">
						<div class="g-left b-new__service">
							<div class="b-new__service__item b-new__service__item_added">
								<div class="b-new__service__item__icon b-new__service__item__icon_added"></div>
								<div class="b-new__service__item__content">
									7.01.15, 16:54
								</div>
							</div>
							<div class="b-new__service__item">
								<div class="b-new__service__item__icon b-new__service__item__icon_comments"></div>
								<div class="b-new__service__item__content b-new__service__item__content_comments">
									<a href="#">15 <span>комментариев</span></a>
								</div>
							</div>
							<div class="b-new__service__item b-new__service__item_tags">
								<div class="b-new__service__item__icon b-new__service__item__icon_tags"></div>
								<div class="b-new__service__item__content">
									<a href="#" class="b-tag">web-design</a>
									<a href="#" class="b-tag">ui</a>
									<a href="#" class="b-tag">flat</a>
								</div>
							</div>
							<div class="b-new__service__item_rating b-new__service__item">
								<div class="b-new__service__item__icon b-new__service__item__icon_rating"></div>
								<div class="b-new__service__item__content b-new__service__item__content_rating">
									4,4 <span>/ 5,0</span>
								</div>
							</div>
							<div class="b-new__service__item b-new__service__item_favourites-state b-new__service__item_favourites">
								<div class="b-new__service__item__icon b-new__service__item__icon_favourites"></div>
								<div class="b-new__service__item__content b-new__service__item__content_favourites">
									<span>В избранное!</span>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
<% end %>
<% end %>
			<div class="b-button b-button_expanded b-news__load-more">Загрузить ещё</div>
		</div>
	</div>
</div>
