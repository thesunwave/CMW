<%= render partial: "components/errors" %>
<div class="b-page b-page__settings">
  <h1 class="b-page__title b-page__title_1"><%= t('title.user_settings') %></h1>
  <div class="b-page__cover b-page__cover_settings">
  <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
  <%= f.hidden_field :invitation_token %>
  <%= f.hidden_field :lang, value: current_locale %>

    <h2 class="b-page__title b-page__title_2"><%= t('user_settings.main_info') %></h2>
    <div class="g-clearfix">
      <div class="g-left">
        <label>
          <span class="b-input__title b-input__title_bold"><%= t('user_settings.first_name') %></span><span class="b-required-star">*</span>
          <span class="b-input__title_bold b-input__title_help">(<%= t('user_settings.first_name_helper') %>)</span>
          <%= f.text_field :first_name, class: "b-input_text" %>
        </label>
      </div>
      <div class="g-right">
        <label>
          <span class="b-input__title b-input__title_bold"><%= t('user_settings.last_name') %></span><span class="b-required-star">*</span>
          <span class="b-input__title_bold b-input__title_help">(<%= t('user_settings.last_name_helper') %>)</span>
          <%= f.text_field :last_name, class: "b-input_text" %>
        </label>
      </div>
    </div>
      <label>
        <span class="b-input__title b-input__title_bold"><%= t('user_settings.spec') %></span><span class="b-required-star">*</span>
        <span class="b-input__title_bold b-input__title_help">(<%= t('user_settings.spec_helper') %>)</span>
        <%= f.text_field :spec, class: "b-input_text" %>
      </label>
      <label>
        <div class="b-input__title b-input__title_bold b-input__title_centred">
          <%= t('user_settings.description') %>
        </div>
        <%= f.text_area :description, class: "b-input_textarea b-input__title_bold b-settings__input_textarea" %>
      </label>
      <div class="g-clearfix">
        <div class="g-left">
          <label>
            <span class="b-input__title b-input__title_bold"><%= t('social.vk') %></span>
            <%= f.text_field :vk, class: "b-input_text", placeholder: "https://vk.com/" %>
          </label>
          <label>
            <span class="b-input__title b-input__title_bold"><%= t('social.fb') %></span>
            <%= f.text_field :facebook, class: "b-input_text", placeholder: "https://facebook.com/" %>
          </label>
          <label>
            <span class="b-input__title b-input__title_bold"><%= t('social.tw') %></span>
            <%= f.text_field :twitter, class: "b-input_text", placeholder: "https://twitter.com/" %>
          </label>
        </div>
        <div class="g-right">
          <label>
            <span class="b-input__title b-input__title_bold"><%= t('social.be') %></span>
            <%= f.text_field :behance, class: "b-input_text", placeholder: "https://behance.net/" %>
          </label>
          <label>
            <span class="b-input__title b-input__title_bold"><%= t('social.dribbble') %></span>
            <%= f.text_field :dribble, class: "b-input_text", placeholder: "https://dribbble.com/" %>
          </label>
          <label>
            <span class="b-input__title b-input__title_bold"><%= t('social.website') %></span>
            <%= f.text_field :website, class: "b-input_text", placeholder: "http://" %>
          </label>
        </div>
      </div>

      <h2 class="b-page__title b-page__title_2"><%= t('user_settings.private_settings') %></h2>
      <div class="g-clearfix">
        <div class="g-left">
          <span class="b-input__title b-input__title_bold"><%= t('user_settings.email') %></span><span class="b-required-star">*</span>
          <span class="b-input__title_bold b-input__title_help b-settings__input-help_yellow">
</span>
          <input type="hidden" name="" data-hook="email-policy" /> <!-- Из промпта выше при клике сюда могут отправляться: all, subs, nobody -->
          <label>
            <%= f.text_field :email, class: "b-input_text" %>
          </label>
        </div>
        <div class="g-right">
          <label>
            <span class="b-input__title b-input__title_bold"><%= t('user_settings.login') %></span><span class="b-required-star">*</span>
            <span class="b-input__title_bold b-input__title_help b-settings__input-help_smaller">(<%= t('user_settings.login_helper') %>)</span>
            <%= f.text_field :username, class: "b-input_text" %>
          </label>
          <div class="g-clearfix">
            <div class="g-left g-left_smaller">
              <label>
                <span class="b-input__title b-input__title_bold"><%= t('user_settings.new_password') %></span>
                <%= f.password_field :password, class: "b-input_text" %>
              </label>
            </div>
            <div class="g-right g-right_smaller">
              <label>
                <span class="b-input__title b-input__title_bold"><%= t('user_settings.new_password_confirmation') %></span>
                <%= f.password_field :password_confirmation, class: "b-input_text" %>
              </label>
            </div>
          </div>
        </div>
      </div>
      <div class="b-settings__commit">
        <%= f.submit t('common.to_save'), class: "b-button b-button_yellow b-button_last b-button_long b-button_margined b-settings__commit-button" %>
      </div>
<% end %>
</div>
</div>
